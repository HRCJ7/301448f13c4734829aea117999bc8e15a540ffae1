<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="170dp"
    android:background="@color/white"
android:layout_gravity="center"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:focusable="false" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:focusable="false" >


        <ImageView
            android:id="@+id/img_first"
            android:layout_width="170dp"
            android:layout_height="182dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_first"
            android:layout_alignTop="@+id/img_first"
            android:layout_alignRight="@+id/img_first"
            android:layout_alignBottom="@+id/img_first"
            android:layout_margin="1dp"
            android:gravity="left|bottom"
            android:padding="5dp"
            android:text="Hello"
            android:textSize="20dp"
            android:textColor="#ffffff" />
    </RelativeLayout>


        <ImageView
            android:id="@+id/img_second"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="left|top"
            android:background="@drawable/badge_soldout" />




    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/likes_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/likes"
            />
        <ImageView
            android:id="@+id/likes"
            android:background="@drawable/icon_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/comments"
            android:background="@drawable/icon_comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/likes_count"/>
        <TextView
            android:id="@+id/comments_count"
            android:text="6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/comments"
            />

        <TextView
            android:text="$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/price"
            />
        <TextView
            android:id="@+id/price"
            android:text="6"
            android:paddingEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

</LinearLayout>
